.wrapper
  .side-bar
    .header
      %h3.header__name
        =current_user.name
      %ul.header__lists
        %li.list
          =link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          =link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
    .groups
      .group
        .group__name tera
        .group__message Hello
  / チャット部分
  .chat
    / チャット部分ヘッダー
    .header
      .left-header
        .left-header__title
          tera
        %ul.left-header__members Member:TJ
      .right-header
        =link_to "Edit", "####", class: "right-header__button"
    / チャット部分本体
    .messages
      .message
        .upper-message
          .upper-message__user-name terasawa
          .upper-message__date 2018/11/21 23:09
        .lower-message
          %p.lower-message__content aaa
    / メッセージ入力フォーム
    .form
      %input.form__message{:placeholder => "type a message"}/
      .form__mask
        %label.form__mask__image{:for => "message_image"}
          %i.fa.fa-picture-o.icon
          %input#message_image.hidden.js-file{:name => "message[image]", :type => "file"}/

      %input.form__submit{"" => "", :name => "commit", :type => "submit", :value => "Send"}/
