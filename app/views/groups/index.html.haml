.wrapper
  .side-bar
    .header
      %h3.header__name
        =current_user.name
      %ul.header__lists
        %li.list
          =link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          =link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              no messages
  / チャット部分
  .chat
    / チャット部分ヘッダー
    .header
      .left-header
        .left-header__title グループ名
        %ul.left-header__members Member: NO MEMBER
      .right-header
        =link_to "Edit", "####", class: "right-header__button"
    / チャット部分本体
    .messages
      .message
        .upper-message
          .upper-message__user-name メンバー名
          .upper-message__date 投稿時刻
        .lower-message
          %p.lower-message__content メッセージ
